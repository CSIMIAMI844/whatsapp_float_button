<odoo>
    <record id="res_config_settings_view_form_inherit_whatsapp" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.whatsapp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_settings']" position="after">
                <block string="WhatsApp" id="whatsapp_settings">
                    <h2 t-translate="yes">Configuración de WhatsApp</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <div class="row align-items-center">
                                    <!-- Etiqueta -->
                                    <div class="col-5">
                                        <label for="whatsapp_number" t-translate="yes" string="Número de WhatsApp"/>
                                    </div>
                                    <!-- Campo -->
                                    <div class="col-7">
                                        <field name="whatsapp_number" placeholder="56900000000"/>
                                    </div>
                                </div>
                                <!-- Texto de ayuda -->
                                <div class="text-muted mt8" t-translate="yes">
                                    Número para el chat de WhatsApp. Usa el formato internacional, por ejemplo: 56912345678 (sin + ni espacios).
                                </div>
                            </div>
                        </div>
                    </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
